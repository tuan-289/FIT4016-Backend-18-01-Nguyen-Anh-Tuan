@model SchoolManagement.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">Full name</dt>
        <dd class = "col-sm-10">@Model.FullName</dd>

        <dt class = "col-sm-2">Student ID</dt>
        <dd class = "col-sm-10">@Model.StudentId</dd>

        <dt class = "col-sm-2">Email</dt>
        <dd class = "col-sm-10">@Model.Email</dd>

        <dt class = "col-sm-2">Phone</dt>
        <dd class = "col-sm-10">@Model.Phone</dd>

        <dt class = "col-sm-2">School</dt>
        <dd class = "col-sm-10">@Model.School?.Name</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</p>